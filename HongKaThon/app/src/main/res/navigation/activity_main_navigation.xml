<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.cookandroid.social_distance.fragment.MapFragment"
        android:label="지역별 현황"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.cookandroid.social_distance.fragment.MainFragment"
        android:label="메인화면"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_mainFragment_to_informationFragment"
            app:destination="@id/informationFragment" />
    </fragment>
    <fragment
        android:id="@+id/informationFragment"
        android:name="com.cookandroid.social_distance.fragment.InformationFragment"
        android:label="상세정보" >
        <action
            android:id="@+id/action_informationFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/oneFiveFragment"
        android:name="com.cookandroid.social_distance.fragment.level.OneFiveFragment"
        android:label="OneFiveFragment" >
        <action
            android:id="@+id/action_oneFiveFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/oneFragment"
        android:name="com.cookandroid.social_distance.fragment.level.OneFragment"
        android:label="OneFragment" >
        <action
            android:id="@+id/action_oneFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/threeFragment"
        android:name="com.cookandroid.social_distance.fragment.level.ThreeFragment"
        android:label="ThreeFragment" >
        <action
            android:id="@+id/action_threeFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/twoFiveFragment"
        android:name="com.cookandroid.social_distance.fragment.level.TwoFiveFragment"
        android:label="TwoFiveFragment" >
        <action
            android:id="@+id/action_twoFiveFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/twoFragment"
        android:name="com.cookandroid.social_distance.fragment.level.TwoFragment"
        android:label="TwoFragment" >
        <action
            android:id="@+id/action_twoFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>